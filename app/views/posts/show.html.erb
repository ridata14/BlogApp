<p>
  <h1><%= @posts.title %></h1>
</p>

<p><h3>by <%= @posts.user.name %></h3>
<i><%= @posts.updated_at.strftime("Updated last %a, %m/%d/%Y, %I:%M%p") %></i>
</p>

<p>
  <strong><%= @posts.body %></strong>
</p>

<h3><%= @posts.comments.count %> Comments</h3>

<% #render @posts.comments %>

<div class='row'>
	<div class='comments col-md-6'>
	
	<% @posts.comments.each do |comment| %>
		<p>
		  <b><div class='author-name'><%= comment.commenter %>:</div></b>
			<i><time><%= time_ago_in_words(comment.updated_at)%> ago.</time></i>
		  <p><div class='comment-content'><span><%= comment.body %></span></div></p>
		</p>

		<%= link_to 'Delete', [@posts, comment],
               				method: :delete, 
               				class: 'delete-link'  %>

	<% end %>
	
		
	</div>
</div>

<% if user_signed_in? %>
	<%= render 'layouts/comment_form' %>
<% else %>

<% end %>

