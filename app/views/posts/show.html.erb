<p>
  <h1><%= @posts.title %></h1>
</p>

<p><%= image_tag @posts.user.avatar.url(:thumb), class: 'avatar' %><h5>by <b><%= @posts.user.name %></b></h5>
<span class='date-update'><i><%= @posts.updated_at.strftime("Updated last %a, %m/%d/%Y, %I:%M%p") %></i></span>
</p>

<div class="comments">
	<p>
	  <strong><%= @posts.body %></strong>
	</p>

<br />

	<h4><%= @posts.comments.count %> Comments</h4>
</div>

<br />

<%= render 'layouts/show_comments' %>
		
		<br />
		<% if user_signed_in? %>
			<%= render 'layouts/comment_form' %>
		<% else %>
		<% end %>