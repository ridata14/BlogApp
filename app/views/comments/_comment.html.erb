<div class='row'>
	
	<div class='comments col-md-6'>
		<p>
			<%= image_tag comment.user.avatar_url(:thumb) %>
				<b><div class='author-name'><%= comment.user.name %>:</div></b>
					<i><time><%= time_ago_in_words(comment.updated_at)%> ago.</time></i>
				<p><div class='comment-content'><span><%= comment.body %></span></div></p>
		</p>

		<%= link_to 'Delete', [@post, comment],
               				method: :delete, 
               				class: 'delete-link'  %>

	</div>
</div>