<% @recent_posts.each do |recent| %>


		  <div class="recent-post col-md-3">
		    <div class="thumbnail">
		      <%= image_tag recent.image.url(:medium), class: 'image-format' %>
		      <div class="caption">
		        <h3><%= link_to recent.title, recent %></h3>
		        <p>by <%= recent.user.name %></p>
		        <p><%= truncate(recent.body, :length => 100) %></p>
		        <p><%= link_to 'Read more', recent, class: 'btn btn-default' %></p>
		      </div>
		    </div>
		  </div>

<% end %>


